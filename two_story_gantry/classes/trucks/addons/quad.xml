			Mass="600"
			NetSync="pv"			
			ModelFrame="Body_cdt"
			Collisions="None"
		>
			<Constraint Type="Fixed" />
			<Body
				Friction="2.0"
				Mass="200"
				ModelFrame="Sublift_cdt"
				NoFoliageCollisions="true"
			>
				<Constraint
					AxisLocal="(0; 1; 0)"
					Name="Sublift"
					Type="Prismatic"
					MinLimit="0"
					MaxLimit="1.7"
				>
					<Motor
						Damping="1"
						Force="800000"
						Tau=".5"
						Type="Position"
					/>
				</Constraint>
				<Body
					Friction="2.0"
					Mass="400"
					ModelFrame="Lift_cdt"
					NoFoliageCollisions="true"
				>
					<Constraint
						AxisLocal="(0; 1; 0)"
						Name="Lift"
						Type="Prismatic"
						MinLimit="0"
						MaxLimit="1.45"
					>
						<Motor
							Damping="1"
							Force="800000"
							Tau=".5"
							Type="Position"
						/>
					</Constraint>
					<Body Mass="200" ModelFrame="Boom_cdt">
						<Constraint
							AxisLocal="(-1; 0; 0)"
							Name="Boom"
							Type="Prismatic"
							MinLimit="0"
							MaxLimit="5"
						>
							<Motor Force="800000" Tau="0.4" Type="Position" />
						</Constraint>
						<Body Mass="200" ModelFrame="Hook_cdt">
							<Constraint
								AxisLocal="(1; 0; 0)"
								Name="Hook"
								Type="Prismatic"
								MinLimit="0"
								MaxLimit="5"
							>
								<Motor Force="800000" Tau="0.4" Type="Position" />
							</Constraint>
						</Body>
					</Body>
				</Body>				
			</Body>
		</Body>
	</PhysicsModel>

